<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayout_m_m"
    android:background="@color/viewBackground"
    android:orientation="vertical"
    tools:context="com.asen.callphone.ui.AddContactsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            style="@style/TextView_0_w_c_16dp_cWhite"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/save"
            style="@style/TextView_0_w_c_16dp_cWhite"
            android:text="@string/save" />

    </LinearLayout>


    <EditText
        android:id="@+id/name"
        style="@style/LinearLayout_m_w"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon_head2"
        android:drawablePadding="10dp"
        android:hint="名称"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/phone"
        style="@style/LinearLayout_m_w"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon_call"
        android:drawablePadding="10dp"
        android:hint="电话"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/mailbox"
        style="@style/LinearLayout_m_w"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icon_mailbox"
        android:drawablePadding="10dp"
        android:hint="邮箱"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary" />


</LinearLayout>
